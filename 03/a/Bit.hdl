/**
 * 1-bit register:
 * If load[t] == 1 then out[t+1] = in[t]
 *                 else out does not change (out[t+1] = out[t])
 */

CHIP Bit {
    IN in, load;
    OUT out;

    PARTS:
    // Put your code here:

    // in 接到b (詳情參見Mux)
    Mux(b=in,a=o,sel=load,out=Muxout);     //不允許out出去還拉回來，用個Ｏ做中間替代
    DFF(in=Muxout,out=o,out=out);

}
